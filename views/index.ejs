<%- include("header.ejs") -%>

<div class="box" id="heading">
        <h1><%= date %></h1>
    </div>

    <div class="box">
        <% for(var i = 0; i < toDoItems.length; i++) { %>
            <div class="item">
                <input type="checkbox">
                <p><%= toDoItems[i] %></p>
            </div>
        <% } %>
        <form action="/" class="class" method="POST">
            <input type="text" name="newTask" placeholder="New Task" autocomplete="off">
            <button type="submit">+</button>
        </form>
    </div>

    <footer>
        <span>Julia Vrn. &#169 2020</span>
    </footer>
    
</body>
</html>